[core]
  editor = vim
	excludesfile = ~/.gitignore_global

# Colors.
[color]
	interactive = auto
	ui = auto
	pager = true
	branch = auto
	diff = auto
	status = auto
    showbranch = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# Merge/pull/push
[merge]
	log = true
[push]
	# default = current
    # default = matching
    default = current
[pull]
	rebase = true
[rebase]
  autoStash = true

[alias]
	co = checkout
    cp = cherry-pick
	br = branch -v
	ci = commit
    s  = status
	st = status
	a  = add -p
	i  = add -i
	g  = grep --break --heading --line-number
	d  = diff
	pf = push -f
	l  = log --oneline --graph --decorate
	ll = log -p
	lt = log trunk
	graph = log --graph --oneline --decorate=short --branches='*'
    graphall = log --all --graph --oneline --decorate
	recent = for-each-ref --sort=-committerdate refs/heads/ --count=20 --format='%(HEAD)%(objectname:short) %(color:yellow)%(refname:short)%(color:reset) - %(color:green)%(committerdate:relative)%(color:reset)'
	brx = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
	df = diff --color-words='[^[:space:]]'
	sh = show --color-words='[^[:space:]]'
	pend = cherry -v origin/master
	psuh = push
	lastcommit = rev-parse HEAD
	last = rev-parse HEAD
  # commit_with_t = commit --author 'Tanya <tanechka289@gmail.com'

[format]
	# pretty = %C(yellow)%h%Creset %C(magenta)%cd%Creset %d %s

[commit]
	template = ~/.commitmessage

[grep]
	extendRegexp = true
	lineNumber = true

[fetch]
	prune = true

[credential]
	helper = /usr/lib/git-core/git-credential-libsecret