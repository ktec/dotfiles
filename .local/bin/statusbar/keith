state=${_state:-0}

case $button in
	1) # Left click
  new_state=$((_state + 1))
  ;;
  2) # Double click
  ;;
	3) # Right click
  new_state=$((_state - 1))
  ;;
  4) # Scroll down
  new_state=$((_state - 10))
  ;;
  5) # Scroll up
  new_state=$((_state + 10))
  ;;
  6) # Scroll right
  ;;
  7) # Scroll left
  ;;
  *) # No click
  new_state=$((_state))
esac

# [ -z "$1" ] && exit
#
# icon="$2"
# [ -z "$2" ] && icon="$1"
# icon=${icon:-" ï€¨ "}


printf '
  {
    "full_text":"Counter: %s",
    "short_text":"C: %s",
    "color": "#c5c8c6",
    "background": "#2d2d2d",
    "border": "#1D1F21",
    "border_top": 0,
    "border_right": 0,
    "border_bottom": 0,
    "border_left": 0,
    "min_width": 100,
    "_state":%d
  }
' $state $state $new_state

exit 0

